{
  "name": "smart-work-tracker",
  "version": "1.0.0",
  "description": "Privacy-focused macOS desktop app for tracking work productivity with AI insights",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --enable-logging",
    "package": "electron-builder"
  },
  "keywords": [
    "productivity",
    "work-tracker",
    "electron",
    "macos",
    "ai-analysis"
  ],
  "author": "Smart Work Tracker Team",
  "license": "MIT",
  "type": "commonjs",
  "build": {
    "appId": "com.smartworktracker.app",
    "productName": "Smart Work Tracker",
    "mac": {
      "identity": null,
      "category": "public.app-category.productivity",
      "target": "dir",
      "files": [
        "**/*",
        ".env"
      ]
    }
  },
  "dependencies": {
    "chart.js": "^4.5.1",
    "dotenv": "^17.2.3",
    "uiohook-napi": "^1.5.4"
  },
  "devDependencies": {
    "electron-builder": "^26.0.12",
    "electron-rebuild": "^3.2.9",
    "electron": "^39.2.7"
  }
}